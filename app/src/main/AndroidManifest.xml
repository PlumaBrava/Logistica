<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nextnut.logistica">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.DIAL_PHONE" />
    <!-- Include required permissions for Google Mobile Ads to run -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_carga"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustResize">
        <!--"adjustPan"-->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:launchMode="singleTop"
                android:value="com.nextnut.logistica.LoginActivity" />
        </activity>
        <activity
            android:name=".ProductListActivity"
            android:label="@string/title_product_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".ProductDetailActivity"
            android:label="@string/title_product_detail"
            android:parentActivityName=".ProductListActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar"
            android:windowSoftInputMode="adjustPan">// pone el campo en edicion siempre en la pantalla
            <!--android:windowSoftInputMode="adjustResize"-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="market.android.com"
                    android:path="/search"
                    android:scheme="http" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.ProductListActivity" />
        </activity>

        <provider
            android:name=".data.generated.LogisticaProvider"
            android:authorities="${applicationId}.data.LogisticaProvider"
            android:exported="false" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".CustomListActivity"
            android:label="@string/title_custom_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".CustomDetailActivity"
            android:label="@string/title_custom_detail"
            android:parentActivityName=".CustomListActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.CustomListActivity" />
        </activity>
        <activity
            android:name=".AlmacenesListActivity"
            android:label="@string/title_almacenes_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".AlmacenesDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_almacenes_detail"
            android:parentActivityName=".CustomListActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.AlmacenesListActivity" />
        </activity>
        <activity
            android:name=".CustomOrderDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_customorder_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />
        <!-- android:theme="@android:style/Theme.Translucent.NoTitleBar" -->
        <!-- android:label="@string/app_name" -->
        <activity
            android:name=".CustomSelectionActivity"
            android:label="@string/title_activity_custom_selection"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Dialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".ProductSectionActivity"
            android:label="@string/title_activity_product_section"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".ProductosEnOrdenes"
            android:label="@string/title_activity_productos_en_ordenes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".PagosActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_pagos_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".MovimientosStockActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/TituloMovimiento"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Dialog_NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".ReporteMensualxCliente"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".ReportexMes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>

        <receiver android:name=".widget.LogisticaWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/logistica_widget_info" />
        </receiver>

        <service
            android:name=".widget.LogisticaWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".EmpresasActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_empresas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".EmpresasListActivity"
            android:label="@string/title_activity_empesas_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".UsuarioListActivity"
            android:label="@string/title_usuario_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
        <activity
            android:name=".UsuarioDetailActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_usuario_detail"
            android:parentActivityName=".UsuarioListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.UsuarioListActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nextnut.logistica.MainActivity" />
        </activity>
    </application>

</manifest>