<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/custom_cardViewMarginLeft"
    android:layout_marginStart="@dimen/custom_cardViewMarginLeft"
    android:layout_marginRight="@dimen/custom_cardViewMarginRight"
    android:layout_marginEnd="@dimen/custom_cardViewMarginRight"
    android:layout_marginTop="@dimen/custom_cardViewtMarginTop"
    android:layout_marginBottom="@dimen/custom_cardViewMarginBottom"
    android:elevation="@dimen/custom_cardViewElevation"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/saldosTitleID"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/PickingCard_background"
    >




    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FFCC00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        <TextView
            android:text="@string/pickng_card_order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/titlepickingNumberOrderCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="start"
            android:textStyle="bold"
            android:layout_weight="1"
            android:transitionName="@string/custom_icon_transition_surname"

            />

            <ImageButton
                android:id="@+id/save_picking_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:gravity="top|end"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_save"
                android:contentDescription="@string/picking_card_saveButton_contentDescription"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:backgroundTint="@android:color/transparent" />



        </LinearLayout>


                <TextView
                    android:id="@+id/titlePicckinOder_creationdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/text_margin"
                    />
            <!--android:layout_margin="@dimen/text_margin"-->


        <EditText
            android:id="@+id/TitlepickingOrderComents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:inputType="textAutoCorrect"

            android:hint="@string/picking_card_Text_Coment"
            android:background="@drawable/edittext_bg"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="1" />



        </LinearLayout>



</android.support.v7.widget.CardView>