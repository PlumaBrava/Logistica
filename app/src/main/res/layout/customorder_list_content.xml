<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/custom_cardViewMarginLeft"
    android:layout_marginStart="@dimen/custom_cardViewMarginLeft"
    android:layout_marginRight="@dimen/custom_cardViewMarginRight"
    android:layout_marginEnd="@dimen/custom_cardViewMarginRight"
    android:layout_marginTop="@dimen/custom_cardViewtMarginTop"
    android:layout_marginBottom="@dimen/custom_cardViewMarginBottom"
    android:elevation="@dimen/custom_cardViewElevation"
    card_view:cardBackgroundColor ="@color/CustomOrderCard_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:contentDescription="@string/contentDescription_butonMakeAcall"
        android:id="@+id/phoneClallButton"
        android:src="@android:drawable/sym_action_call"
        />


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FFCC00">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:text="@string/custom_card_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/numberOrderCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="center"
            android:textStyle="bold"

            />


    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="3"
           >
            <!--android:background="@android:color/holo_blue_bright"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/ApellidoyNombreOrderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_weight="1"

                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginStart="@dimen/text_margin"
                    android:textStyle="bold"
                    android:transitionName="@string/custom_icon_transition_name"
                    />



            </LinearLayout>
            <TextView
                android:text="@string/custom_card_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_gravity="start"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/totalPriceOrderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dateOrderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1"
                    />
                <ImageButton

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:gravity="start"

                    android:id="@+id/pasarPickingSelector"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_ff"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
















