<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/custom_cardViewMarginBottom"
    android:layout_marginEnd="@dimen/custom_cardViewMarginRight"
    android:layout_marginLeft="@dimen/custom_cardViewMarginLeft"
    android:layout_marginRight="@dimen/custom_cardViewMarginRight"
    android:layout_marginStart="@dimen/custom_cardViewMarginLeft"
    android:layout_marginTop="@dimen/custom_cardViewtMarginTop"
    android:elevation="@dimen/custom_cardViewElevation"

    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/custom_cardViewMarginRight"
        android:orientation="vertical"
        tools:context="com.nextnut.logistica.ProductDetailFragment">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:orientation="horizontal">


            <!--Custom Photo-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="horizontal"

                >


                <ImageView
                    android:id="@+id/almacen_foto"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/almacen_foto_text"
                    android:maxHeight="104dp"
                    android:maxWidth="104dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_square"
                    />

                <com.rey.material.widget.ProgressView
                    android:id="@+id/progressBarAlmacen"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:pv_autostart="true"
                    app:pv_circular="true"
                    app:pv_progressMode="indeterminate"
                    app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/almacen_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/almacen_nombre"
                        android:hint="@string/almacen_nombre"
                        android:inputType="text"
                        android:maxLength="@integer/customNameMaxLength"
                        android:padding="8dp"
                       />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--app:counterEnabled="true"-->
                    <!--app:counterMaxLength="@integer/customNameMaxLength"-->

                    <EditText
                        android:id="@+id/almacen_ciudad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/almacen_ciudad"
                        android:hint="@string/almacen_ciudad"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <EditText
                    android:id="@+id/almacen_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/almacen_direccion"
                    android:hint="@string/almacen_direccion"
                    android:inputType="text"
                    android:maxLength="@integer/customCityMaxLength"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    app:layout_gravity="left" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="16dp">

                <EditText
                    android:id="@+id/almacen_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/almacen_tipo"
                    android:hint="@string/almacen_tipo"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    app:layout_gravity="left" />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
        <!--Custom IVA-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <EditText
                    android:id="@+id/almacen_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/almacen_telefono"
                    android:hint="@string/almacen_telefono"
                    android:inputType="phone"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    app:layout_gravity="left" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <EditText
                        android:id="@+id/almacen_responsable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/almacen_responsable"
                        android:hint="@string/almacen_responsable"
                        android:inputType="text"
                        android:maxLength="@integer/customAddressMaxLength"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        app:layout_gravity="left" />

                </android.support.design.widget.TextInputLayout>



        </LinearLayout>


        </LinearLayout>


</android.support.v7.widget.CardView>