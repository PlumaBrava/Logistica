<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/product_cardViewMarginLeft"
    android:layout_marginStart="@dimen/product_cardViewMarginLeft"
    android:layout_marginRight="@dimen/product_cardViewMarginRight"
    android:layout_marginEnd="@dimen/product_cardViewMarginRight"
    android:layout_marginTop="@dimen/product_cardViewtMarginTop"
    android:layout_marginBottom="@dimen/product_cardViewMarginBottom"
    card_view:cardBackgroundColor="@color/ProductCard_background"

    android:elevation="@dimen/Poduct_cardViewElevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/photocustom_listContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:maxHeight="96dp"
        android:maxWidth="96dp"
        android:contentDescription="@string/contentDescription_customPhoto"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">


            <!--android:layout_weight="1"-->

            <TextView
                android:id="@+id/surenameCustom_listContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:contentDescription="@string/custom_last_text"
                android:transitionName="@string/custom_icon_transition_surname"
                />

            <TextView
                android:id="@+id/nameCustom_listContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:contentDescription="@string/custom_name_text"
                android:transitionName="@string/custom_icon_transition_name"
                />
            <!--android:layout_weight="1"-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">



        <TextView
            android:id="@+id/deliveryAddress_listContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_margin"
            android:contentDescription="@string/custom_delivery_address_text"
            android:layout_weight="1"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/cityCustom_listContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_margin"
            android:contentDescription="@string/custom_city_text"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>