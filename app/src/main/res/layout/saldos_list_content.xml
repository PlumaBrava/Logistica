<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/custom_cardViewMarginLeft"
    android:layout_marginStart="@dimen/custom_cardViewMarginLeft"
    android:layout_marginRight="@dimen/custom_cardViewMarginRight"
    android:layout_marginEnd="@dimen/custom_cardViewMarginRight"
    android:layout_marginTop="@dimen/custom_cardViewtMarginTop"
    android:layout_marginBottom="@dimen/custom_cardViewMarginBottom"
    android:elevation="@dimen/custom_cardViewElevation"
    card_view:cardBackgroundColor ="@color/SaldosCard_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


           >
        <!--android:layout_weight="3"-->
            <!--android:background="@android:color/holo_blue_bright"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/nameOrderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_weight="1"


                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/latNameOrderCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textStyle="bold"

                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:contentDescription="@string/contentDescription_butonMakeAcall"
                    android:id="@+id/phoneClallButton"
                    android:src="@android:drawable/sym_action_call"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Saldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cantidadOrdenesSinCompensar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_weight="1"
                    />
            </LinearLayout>


        </LinearLayout>



</android.support.v7.widget.CardView>
















