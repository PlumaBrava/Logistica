<?xml version="1.0" encoding="utf-8"?>






<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="#FFCC00">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:maxHeight="124dp"
            android:maxWidth="124dp"
            android:background="@color/colorAccent"
            android:contentDescription="@string/contentDescription_PhotoProduct"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"    >

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_gravity="start"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textStyle="bold"
       />
            <!--android:layout_margin="@dimen/text_margin"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:text="ordenes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:layout_weight="1"


                    />
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="@dimen/text_margin"-->

                <TextView
                    android:text ="Picking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_weight="1"



                    />

                <TextView
                    android:text="delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_weight="1"



                    />

                <!--android:layout_margin="@dimen/text_margin"-->
                <!--android:layout_weight="1"-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



        <TextView
            android:id="@+id/cantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#ffffff"


            />
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="@dimen/text_margin"-->

        <TextView
            android:id="@+id/cantidadPicking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1"



            />

                <TextView
                    android:id="@+id/cantidadTOTALDelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_weight="1"



                    />

                <!--android:layout_margin="@dimen/text_margin"-->
                <!--android:layout_weight="1"-->

    </LinearLayout>


        </LinearLayout>

        </LinearLayout>


</LinearLayout>



