<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nextnut.logistica.ProductDetailFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--Product Number-->
        <TextView
        style="?android:attr/titleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="left"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="@string/product_Id_text"/>
        <!--style="?android:attr/listPreferredItemHeight"-->
        <TextView
        android:id="@+id/product_Id_text"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="left"
        android:padding="8dp"
        android:text="@string/product_Id_text" />

     </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--Product Name-->
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            style="?android:attr/titleTextStyle"
        app:layout_gravity="left"
        app:layout_columnWeight="1"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="@string/product_name_text"/>

        <EditText
        android:id="@+id/product_name_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="right"

        android:padding="8dp"
        android:hint="@string/product_name_text" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--Product Price-->
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            style="?android:attr/titleTextStyle"
        app:layout_gravity="left"
        app:layout_columnWeight="1"
        android:padding="16dp"
            android:textStyle="bold"
        android:text="@string/product_price_text"/>


        <EditText
        android:id="@+id/product_price"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="left"
        android:maxLength="7"
        android:hint="@string/enter_price_message"
        android:inputType="number|numberDecimal"
        android:padding="8dp" />

    </LinearLayout>




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <!--Product Photo-->
        <Button
        android:id="@+id/product_imagen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            style="?android:attr/titleTextStyle"
        android:text="@string/product_photo_text"
        android:padding="16dp"
        android:textStyle="bold"
        app:layout_gravity="center"
         />

        <ImageView
        android:id="@+id/product_imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="96dp"
        android:maxWidth="96dp"
        app:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--Product Description-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/titleTextStyle"
        app:layout_gravity="left"
        app:layout_columnWeight="1"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:text="@string/product_description_text"/>
    <EditText
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="left"
        android:paddingLeft="8dp"
        android:hint="@string/product_description_hint_text"

        />
    <!--style="?android:attr/textAppearanceLarge"-->

    </LinearLayout>

</LinearLayout>
