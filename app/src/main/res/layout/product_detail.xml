<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/product_cardViewMarginBottom"
    android:layout_marginEnd="@dimen/product_cardViewMarginRight"
    android:layout_marginLeft="@dimen/product_cardViewMarginLeft"
    android:layout_marginRight="@dimen/product_cardViewMarginRight"
    android:layout_marginStart="@dimen/product_cardViewMarginLeft"
    android:layout_marginTop="@dimen/product_cardViewtMarginTop"
    android:elevation="@dimen/Poduct_cardViewElevation"

    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.nextnut.logistica.ProductDetailFragment"
        tools:ignore="ExtraText">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Product Name-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--android:singleLine="true"-->
                <EditText
                    android:id="@+id/product_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/product_name_text"
                    android:cursorVisible="true"
                    android:hint="@string/product_name_text"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:transitionName="@string/detail_icon_transition_name"
                    app:layout_gravity="start" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Product Description-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/product_description_hint_text"
                    android:hint="@string/product_description_text"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    app:layout_gravity="left"

                    />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/product_imagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/product_photo_text"

                    android:transitionName="@string/detail_icon_transition_imagen" />
                <!--android:padding="16dp"-->

                <com.rey.material.widget.ProgressView
                    android:id="@+id/progressBarProducto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:pv_autostart="true"
                    app:pv_circular="true"
                    app:pv_progressMode="indeterminate"
                    app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />
            </LinearLayout>
        </LinearLayout>

        /////

        <com.rey.material.widget.Spinner
            android:id="@+id/productRubro"
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/productRubro"
            android:hint="@string/productRubro"
            android:inputType="text"
            android:padding="8dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave" />

        <com.rey.material.widget.Spinner
            android:id="@+id/product_TipoUnidad"
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/productTipoUnidad"
            android:hint="@string/productTipoUnidad"
            android:inputType="text"
            android:padding="8dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave" />


        /////

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--app:counterEnabled="true"-->
                <!--app:counterMaxLength="@integer/customNameMaxLength"-->
                <EditText
                    android:id="@+id/productMinCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/productMinCantidadUnitaria"
                    android:hint="@string/productMinCantidadUnitaria"
                    android:inputType="number"
                    android:padding="8dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--app:counterEnabled="true"-->
                <!--app:counterMaxLength="@integer/customNameMaxLength"-->

                <EditText
                    android:id="@+id/productCantidadDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/productDefaultCantidadUnitaria"
                    android:hint="@string/productDefaultCantidadUnitaria"
                    android:inputType="number"
                    android:padding="8dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--app:counterEnabled="true"-->
                <!--app:counterMaxLength="@integer/customNameMaxLength"-->

                <EditText
                    android:id="@+id/productMaxCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/productMaxCantidadUnitaria"
                    android:hint="@string/productMaxCantidadUnitaria"
                    android:inputType="number"
                    android:padding="8dp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/edittext_bg"
            android:orientation="horizontal">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rey.material.widget.Spinner
                    android:id="@+id/productPerfildePrecios"
                    style="@style/Material.Widget.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom_PerfilDePrecios_text"
                    android:hint="@string/custom_PerfilDePrecios_text"
                    android:inputType="text"
                    android:padding="8dp"
                    app:rd_style="@style/Material.Drawable.Ripple.Wave" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/enter_price_message"
                        android:cursorVisible="true"
                        android:hint="@string/product_price_text"
                        android:inputType="number|numberDecimal"
                        android:maxLength="@integer/productoPriceMaxLength"
                        android:padding="8dp"
                        android:transitionName="@string/detail_icon_transition_price"
                        app:layout_gravity="left" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/product_pricespecial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/enter_priceSpecia_message"
                        android:hint="@string/product_priceSpecal_text"
                        android:inputType="number|numberDecimal"
                        android:maxLength="@integer/productoPriceMaxLength"
                        android:padding="8dp"
                        app:layout_gravity="left" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/botonModificarPrecio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/custom_BotonModificarPrecio"
                android:textStyle="bold" />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_margin="16dp"-->
            <!--android:orientation="horizontal">-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listaPrecios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            </android.support.v7.widget.RecyclerView>
        <!--</LinearLayout>-->

    </LinearLayout>


</android.support.v7.widget.CardView>

