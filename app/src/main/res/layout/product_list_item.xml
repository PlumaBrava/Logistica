<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/product_cardViewMarginLeft"
    android:layout_marginStart="@dimen/product_cardViewMarginLeft"
    android:layout_marginRight="@dimen/product_cardViewMarginRight"
    android:layout_marginEnd="@dimen/product_cardViewMarginRight"
    android:layout_marginTop="@dimen/product_cardViewtMarginTop"
    android:layout_marginBottom="@dimen/product_cardViewMarginBottom"
    card_view:cardBackgroundColor="@color/ProductCard_background"

    android:elevation="@dimen/Poduct_cardViewElevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <!--android:divider="#FFCC00"-->
    <ImageView
        android:id="@+id/photoProducto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:contentDescription="@string/photoListItem"
        android:maxHeight="@dimen/product_cardPhotoheigth"
        android:maxWidth="@dimen/product_cardPhotowidth"
        android:transitionName="@string/detail_icon_transition_name"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="start"
        android:layout_margin="@dimen/text_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:text="@string/productListItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:contentDescription="@string/productTitleListItem"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                />

            <!--android:layout_weight="1"-->

            <TextView
                android:text="@string/priceListItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:contentDescription="@string/priceTitleListItem"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                />

            <TextView
                android:text="@string/SpecialpriceListItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:contentDescription="@string/specialPriceTitleListItem"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                />
            <!--android:layout_weight="1"-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:contentDescription="@string/productListItem"
        android:layout_gravity="center_vertical"

        />
            <!--android:layout_weight="1"-->

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:contentDescription="@string/priceListItem"
        android:layout_gravity="center_vertical"

        />

            <TextView
                android:id="@+id/precioProductoSpecial"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:contentDescription="@string/SpecialpriceListItem"
                android:layout_gravity="center_vertical"

                />
            <!--android:layout_weight="1"-->
        </LinearLayout>

    <TextView
        android:id="@+id/descriptionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/description"


        />



        </LinearLayout>

</LinearLayout>

    </android.support.v7.widget.CardView>


